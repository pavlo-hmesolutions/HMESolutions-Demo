{
  "compilerOptions": {
    "target": "es6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "types": ["worker"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noEmit": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "module": "esnext",
    "baseUrl": "src", // This must be specified if "paths" is.
    "paths": {
       "@common/*": ["src/Components/Common/*"],
       "@assets/*": ["src/assets/*"],
       "@helpers/*": ["src/Helpers/*"]
   },
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "src/Pages/Allcharts/knob/knob.tsx",
    "webpack.config.js"
, "src/Components/Common/CubeCamera/OrbitControlsGizmo.js", "src/Components/Common/CubeCamera/OrbitControls.js"  ],
  "exclude": [
    "node_modules"
  ]
}
